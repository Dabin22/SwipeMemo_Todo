<?xml version="1.0" encoding="utf-8"?>
<com.swipememo.swipememo.customviews.ItemContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <Button
        android:id="@+id/memoItem_delete"
        android:layout_width="@dimen/memoItem_btn_delete_dimen"
        android:layout_height="@dimen/memoItem_btn_delete_dimen"
        android:layout_gravity="center"
        android:background="@drawable/icon_trash"/>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/memoItem_cardRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/memoItem_height"
            android:paddingEnd="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin"
            android:paddingStart="@dimen/half_margin"
            android:paddingLeft="@dimen/half_margin"
            android:paddingTop="@dimen/half_margin"
            android:paddingBottom="@dimen/half_margin"
            android:background="@color/memoViewer_item_background">
            <LinearLayout
                android:id="@+id/memoItem_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/memoItem_upperBar_height"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/memoItem_bar_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/memoItem_upperBar_height"
                    android:textAppearance="@style/TextAppearance_option"/>
                <Button
                    android:id="@+id/memoItem_bar_share"
                    android:layout_width="@dimen/memoItem_upperBar_height"
                    android:layout_height="@dimen/memoItem_upperBar_height"
                    android:background="@drawable/mi_btn_share"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/memoItem_titleBar_height"
                android:orientation="horizontal">
                <ToggleButton
                    android:id="@+id/memoItem_importance"
                    android:layout_width="@dimen/memoItem_titleBar_logo_dimen"
                    android:layout_height="@dimen/memoItem_titleBar_logo_dimen"
                    android:background="@drawable/mi_tbtn_importance"
                    android:textOn=""
                    android:textOff=""
                    />
                <TextView
                    android:id="@+id/memoItem_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/memoItem_titleBar_height"
                    android:textAppearance="@style/TextAppearance_title"/>

            </LinearLayout>
            <TextView
                android:id="@+id/memoItem_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="@style/TextAppearance_body"
                android:textIsSelectable="false"
                android:ellipsize="end" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</com.swipememo.swipememo.customviews.ItemContainer>
